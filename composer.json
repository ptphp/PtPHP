{
    "name": "ptphp/ptphp",
    "type": "library",
    "minimum-stability": "RC",
    "description": "a simple php framework.",
    "keywords": ["ptphp", "framework","ptphp"],
    "homepage": "http://www.ptphp.com",
    "license": "MIT",
    "authors": [{
        "name": "Dhole",
        "email": "ptphp@qq.com",
        "homepage": "http://www.ptphp.com",
        "role": "Lead Developer"
    }],
    "require": {
        "php": ">=5.4",
        "robmorgan/phinx": "^0.5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^3.7|^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {"PtPHP\\": "src/PtPHP"}
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "bin": ["bin/ptphp"],
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
